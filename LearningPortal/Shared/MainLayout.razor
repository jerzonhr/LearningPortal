@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<div class="row-layout master-page-container">
    <div class="column-layout group">
        <div class="column-layout logo">
            <img src="assets/skillz-logo.svg" class="image" />
            <img src="assets/skillz-logo-text.svg" class="image_1" />
        </div>
        <div @onclick="@(() => NavigationManager.NavigateTo("/dashboard"))" class="column-layout group_1">
            <IgbIconButton Variant="IconButtonVariant.Flat" class="icon-button" master_page-scope>
                <span class="material-icons icon">
                    dashboard
                </span>
                <IgbRipple></IgbRipple>
            </IgbIconButton>
            <p class="typography__overline text">
                Main
            </p>
        </div>
        <div @onclick="@(() => NavigationManager.NavigateTo("/courses"))" class="column-layout group_1">
            <IgbIconButton Variant="IconButtonVariant.Flat" class="icon-button" master_page-scope>
                <span class="material-icons icon">
                    school
                </span>
                <IgbRipple></IgbRipple>
            </IgbIconButton>
            <p class="typography__overline text">
                Courses
            </p>
        </div>
        <div @onclick="@(() => NavigationManager.NavigateTo("/tasks"))" class="column-layout group_1">
            <IgbIconButton Variant="IconButtonVariant.Flat" class="icon-button" master_page-scope>
                <span class="material-icons icon">
                    assignment_turned_in
                </span>
                <IgbRipple></IgbRipple>
            </IgbIconButton>
            <p class="typography__overline text">
                Tasks
            </p>
        </div>
        <div @onclick="@(() => NavigationManager.NavigateTo("/progress"))" class="column-layout group_1">
            <IgbIconButton Variant="IconButtonVariant.Flat" class="icon-button" master_page-scope>
                <span class="material-icons icon">
                    assessment
                </span>
                <IgbRipple></IgbRipple>
            </IgbIconButton>
            <p class="typography__overline text">
                Progress
            </p>
        </div>
        <div @onclick="@(() => NavigationManager.NavigateTo("/profile"))" class="column-layout group_1">
            <IgbIconButton Variant="IconButtonVariant.Flat" class="icon-button" master_page-scope>
                <span class="material-icons icon">
                    person
                </span>
                <IgbRipple></IgbRipple>
            </IgbIconButton>
            <p class="typography__overline text">
                Profile
            </p>
        </div>
    </div>
    <div class="view-container">
        @Body
    </div>
</div>

